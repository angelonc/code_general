figure
subplot(221)
Fs=2000;
h1=bsplinelowpass(4,8,Fs);
h1=h1/max(h1);
N=(length(h1)-1)/2;
time1=(0:2*N)/Fs*1000;
plot(time1,h1/max(h1),'r')
hold on

h2=bsplinelowpass(8,8,Fs);
N=(length(h2)-1)/2;
h2=h2/max(h2);
time2=(0:2*N)/Fs*1000;
plot(time2,h2/max(h2),'g')

h3=bsplinelowpass(16,8,Fs);
N=(length(h3)-1)/2;
h3=h3/max(h3);
time3=(0:2*N)/Fs*1000;
plot(time3,h3/max(h3),'b')
set(gca,'box','off')

