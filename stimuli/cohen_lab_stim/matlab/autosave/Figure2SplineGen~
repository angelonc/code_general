%%%%%%%%%% POWER SPCTRUM
subplot(333)
T=20;
[X,Env1,Fm]=pnbsplinemodnoise(inf,4,1,4,8,T,Fs);
W=kaiser(length(Env1),5)';
N=4*2^ceil(log2(length(Env1)));
Pxx=abs(fft(Env1,N)).^2;
Pxx=Pxx/Pxx(1);
faxis=(0:N-1)/N*Fs;
i=find(3.9<faxis & faxis<4.1);
Max4=max(Pxx(i));
plot(faxis,(Pxx),'k')
xlim([0 32])
H1=abs(fft(h1,N)).^2;
ii=max(find(faxis<4));
H1=H1/H1(ii)*Max4;
hold on
plot(faxis,H1,'r')
set(gca,'box','off')
set(gca,'YTick',[0 1])

